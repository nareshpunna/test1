<core:View xmlns:core="sap.ui.core" 
		xmlns:form="sap.ui.layout.form"
		xmlns:layout="sap.ui.layout"
        xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="centerforsight.Login" xmlns:html="http://www.w3.org/1999/xhtml"
		class="sapUiSizeCompact">
	<Page title="Center For Sight" >
		<content>
	      <Panel headerText="Login">
	      <form:SimpleForm columnsL="1" 
	      columnsM="1" 
	      editable="true"
	      layout="ResponsiveGridLayout">
	      <form:content>
	      <Label text="User Name" />
	      <Input value=""  id="username">
	        <layoutData>
	        	<layout:GridData span="L3 M6 S12"/>
	        </layoutData>
	      </Input>
	      <Label text="Password"/>
	      <Input type="Password" id="password">
	       <layoutData>
	      	<layout:GridData span="L3 M6 S12"/>
	      </layoutData>
	      </Input>
	      <Label/>
	      <Button text="Login" press="onLogin">
	        <layoutData>
	           <layout:GridData span="L1 M2 S12"/>
	        </layoutData>
	      </Button>
	      <Button text="Sign Up" press="onSignUp">
	        <layoutData>
	          <layout:GridData span="L1 M2 S12"/>
	        </layoutData>
	      </Button>	      
	      </form:content>
	      </form:SimpleForm>
	      </Panel>
		</content>
	</Page>
</core:View>